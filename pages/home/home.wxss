@import "../tpls/base.wxss";
@import "../tpls/products/products-tpl.wxss";
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
.swiper{
  height: 400rpx;
  width: 100%;
}
.swiper-box{
  overflow-x: hidden;
}
.swiper_container {
  height: 60rpx;
  width: 100%;
 
}
.swiper_item {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 12rpx;
  color:#515151;
  font-family: "微软雅黑";
  font-weight: bold;
  
}
.banner-item{
  height: 100%;
  width: 100%;
}
.banner-item image{
  height: 100%;
  width: 100%;
}

.home-main-header{
  display: flex;
  height: 60rpx;
  color: #AB956D;
  background-color: #fff;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}


.theme-box{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.theme-item{
  display: flex;
  height:375rpx;
  width: 50%;
  border-bottom: 4rpx solid #fff;
  position: relative;
  box-sizing: border-box;

}
.theme-item:first-child{
  border-right:4rpx solid #fff;
}
.theme-item.big{
  width: 100%;
}
.theme-item.big .theme-icon view{
  margin: 0 auto;
  width: 150rpx;
  height: 60rpx;
  border-radius: 60rpx;
  line-height: 60rpx;
  border:1rpx solid #fff;
  text-align: center;
  font-size: 24rpx;
}
.theme-item image{
  height: 100%;
  width: 100%;
}
.theme-icon{
  margin-top:10rpx;
  height: 48rpx;
}
.theme-icon image{
  height: 48rpx;
  width: 48rpx;
}

.home-main-products{
  background-color:rgba(231, 231, 230, 0.397);
}
.swiper_laba{
  height: 45rpx;
  width:45rpx;
  padding:10rpx 10rpx 10rpx 10rpx;
  padding-left:15rpx;
}
.swiper-container{
  display:flex;
  flex-flow:row;
  border-bottom:1px solid rgba(0, 0, 0, 0.308);
}
span{
  padding-left:10rpx;
  color:rgba(243, 8, 39, 0.932);
}
.action{
  margin-left:-100rpx;
}
